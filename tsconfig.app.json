{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,

    // ðŸ‘‡ Rutas y alias
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"]
    },

    // ConfiguraciÃ³n moderna para Vite + Vue 3 + TS
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    // LibrerÃ­as y compatibilidad
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Buenas prÃ¡cticas
    "strict": true,
    "skipLibCheck": true,

    // ðŸ‘‡ Obligatorio con composite: true
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    // ðŸ‘‡ Redirige los .d.ts a una carpeta separada
    "outDir": "./types"
  },
  "include": ["src"]
}