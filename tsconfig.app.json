{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // ðŸ‘‡ ConfiguraciÃ³n moderna para Vite + Vue 3 + TS
    "target": "ESNext",          
    "module": "ESNext",          
    "moduleResolution": "bundler", 

    // LibrerÃ­as y compatibilidad
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Buenas prÃ¡cticas
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src"]
}